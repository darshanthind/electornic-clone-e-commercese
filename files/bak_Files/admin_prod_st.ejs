    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
             <h2> Product Status</h2>   
                <h5>Delivery Status</h5>
               
            </div>
        </div>
         <!-- /. ROW  -->
         <hr />
         <div class="row">
            <div class="col-md-12">
                <!-- Form Elements -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                       Status Departure
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h3></h3>
                                <form action="/admin/status_up/<%=prod[0]._id%>/<%=userid%>" method="POST">
                                    <div class="form-group">
                                        <label>ProductName:</label>
                                        <input type="text" value="<%=prod[0].ProductName%>" class="form-control" value="Product Name.." name="productname" readonly/>
