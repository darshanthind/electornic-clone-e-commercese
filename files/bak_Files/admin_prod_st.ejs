                                    </div>
                                    <div class="form-group">    
                                        <label>Id</label>
                                        <input type="text"  class="form-control" value="<%=userid%>" placeholder="PLease Enter age"  name="id" readonly/>
                                    </div>
                                    <div class="form-group">
                                        <label>Status:</label>
                                        <input type="text" class="form-control" value="<%=prod[0].Status.Status_prod%>" placeholder="Status" name="Status[Status_prod]"/>
                                    </div>
                                    <div class="form-group">
                                        <label>Deadline:</label>
                                        <input type="text" class="form-control" value="<%=prod[0].Status.Deadline%>" placeholder="Deadline" name="Status[Deadline]"/>
                                    </div>
                                    <div class="form-group">
                                        <label>Result</label>
                                        <input type="text" class="form-control" value="<%=prod[0].Status.Result%>"  placeholder="Result" name="Status[Result]"/>
                                    </div>
                                    <button type="submit" class="btn btn-default">Update Button</button>
                                    </div>
                                   

                                </form>
